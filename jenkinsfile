pipeline {
    agent any

    stages {
        stage('Sonar Analysis11') {
            steps {
                echo 'Analysising code....'
                sh 'cd /home/ubuntu/lms-public/webapp && sudo docker run  --rm -e SONAR_HOST_URL="http://3.27.106.90:9000" -e SONAR_LOGIN="sqp_6807dbac6cd7ef3266f6c4410030c2f86ee8f4af"  -v ".:/usr/src" sonarsource/sonar-scanner-cli -Dsonar.projectKey=lms'
           echo 'success sonar'
           }
        }
        stage('Build LMS') {
            steps {
                echo 'Building app....'
                sh 'cd webapp && npm install && npm run build'
                 echo 'success build'
            }
        }

        stage('Release LMS') {
            steps {
                script {
                    echo "Releasing.."       
                    def packageJSON = readJSON file: 'webapp/package.json'
                    def packageJSONVersion = packageJSON.version
                    echo "${packageJSONVersion}"  
                    sh "zip webapp/dist-${packageJSONVersion}.zip -r webapp/dist"
                    sh "curl -v -u admin:lms --upload-file webapp/dist-${packageJSONVersion}.zip http://13.52.135.147:8081/repository/lms/" 
                     echo 'success release'
            }
            }
        }

        stage('Deploy LMS') {
            steps {
                script {
                    echo "Deploying.."       
                    def packageJSON = readJSON file: 'webapp/package.json'
                    def packageJSONVersion = packageJSON.version
                    echo "${packageJSONVersion}"  
                    sh "curl -u admin:lms -X GET \'http://13.52.135.147:8081/repository/lms/dist-${packageJSONVersion}.zip\' --output dist-'${packageJSONVersion}'.zip"
                    sh 'sudo rm -rf /var/www/html/*'
                    sh "sudo unzip -o dist-'${packageJSONVersion}'.zip"
                    sh "sudo cp -r webapp/dist/* /var/www/html"
                     echo 'success deploy'
            }
            }
        }
        
    }
}
